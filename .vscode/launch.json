{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'transport-api'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=transport-api",
                    "--package=transport-api"
                ],
                "filter": {
                    "name": "transport-api",
                    "kind": "bin"
                }
            },
            "program": "${workspaceFolder}/target/debug/transport-api",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "actix_web=info,actix_server=info",
                "DATABASE_URL": "postgres://user:password@localhost:5432/your_database_name"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'transport-api'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=transport-api",
                    "--package=transport-api"
                ],
                "filter": {
                    "name": "transport-api",
                    "kind": "bin"
                }
            },
            "program": "${workspaceFolder}/target/debug/transport-api",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "actix_web=debug,actix_server=debug"
            }
        }
    ]
}